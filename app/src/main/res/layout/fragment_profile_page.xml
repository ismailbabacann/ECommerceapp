<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Pages.ProfilePage">

        <LinearLayout
            android:id="@+id/layout_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/profile_page_layout_background"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <ImageView
                android:id="@+id/img_exit"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/exitbutton" />

            <TextView
                android:id="@+id/txt_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Çıkış Yap"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4">

            <LinearLayout
                android:id="@+id/layout_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/profile_page_layout_background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_orders"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/order" />

                <TextView
                    android:id="@+id/txt_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Siparişlerim"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/profile_page_layout_background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_settings"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/setting" />

                <TextView
                    android:id="@+id/txt_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Ayarlar"
                    android:textAlignment="center"
                    android:textColor="#040000"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_coupons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/profile_page_layout_background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_coupons"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/coupon" />

                <TextView
                    android:id="@+id/txt_coupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Kuponlarım"
                    android:textAlignment="center"
                    android:textColor="#040000"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/profile_page_layout_background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_comments"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/comment" />

                <TextView
                    android:id="@+id/txt_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Değerlendirmeler"
                    android:textAlignment="center"
                    android:textColor="#040000"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_customer_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/profile_page_layout_background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_customer_service"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/coupon" />

                <TextView
                    android:id="@+id/txt_customer_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Müşteri Hizmetleri"
                    android:textAlignment="center"
                    android:textColor="#040000"
                    android:textSize="25sp" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="169dp"
            android:layout_height="165dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/person" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>